        <Grid Margin="348,22,0,0" HorizontalAlignment="Left" Width="802" Height="343" VerticalAlignment="Top">
            <Rectangle Style="{StaticResource GroupGlass}" >
                <Rectangle.Effect>
                    <DropShadowEffect/>
                </Rectangle.Effect>
            </Rectangle>
